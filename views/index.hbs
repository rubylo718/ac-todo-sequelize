<a class="btn btn-info mb-3" href="/todos/new">Create</a>
<div class="row">
  <div class="col">
    <h4>Todos</h4> 
    <ul class="list-group">
      {{#each todos}}
      {{#isFalsey this.isDone}}
      <li class="list-group-item {{#is this.priority "1"}}list-group-item-danger{{/is}}">
        <div class="row justify-content-between">
          <div class="col-auto mr-auto">
            <input class="form-check-input mx-1" style="vertical-align: middle;" type="checkbox" name="isDone" {{#if this.isDone}} checked {{/if}} disabled>
            <h5 style="display: inline; vertical-align: middle;">
              <a href="./todos/{{ this.id }}" >{{this.name}}</a>
            </h5>
          </div>
          <div class="col-auto">
            <a class="btn btn-success" href="./todos/{{ this.id }}/edit">Edit</a>
            <form action="./todos/{{ this.id }}?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          </div>
        </div>
      </li>
      {{/isFalsey}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <h4>Done</h4>
    <ul class="list-group">
    {{#each todos}}
    {{#if this.isDone}} 
    <li class="list-group-item">
      <div class="row justify-content-between">
        <div class="col-auto mr-auto">
          <input class="form-check-input mx-1"style="vertical-align: middle;" type="checkbox" name="isDone" {{#if this.isDone}} checked {{/if}} disabled>
          <h5 style="display: inline; vertical-align: middle;">
            <a href="./todos/{{ this.id }}" >{{this.name}}</a>
          </h5>
        </div>
        <div class="col-auto">
          <a class="btn btn-success disabled" href="./todos/{{ this.id }}/edit">Edit</a>
          <form action="./todos/{{ this.id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </li>
    {{/if}}
    {{/each}}
    </ul>
  </div>
</div>